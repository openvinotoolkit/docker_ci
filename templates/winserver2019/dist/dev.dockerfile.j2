# dev package
WORKDIR ${INTEL_OPENVINO_DIR}
ARG OPENVINO_WHEELS_URL
RUN IF not defined OPENVINO_WHEELS_URL ( `
        python -m pip install --no-cache-dir --pre openvino=={{ product_version }} && `
        python -m pip install --no-cache-dir --pre openvino_dev[caffe,kaldi,mxnet,onnx,pytorch,tensorflow2]=={{ product_version }} `
    ) ELSE ( `
        python -m pip install --no-cache-dir --pre openvino>={{ product_version }} --trusted-host=* --find-links %OPENVINO_WHEELS_URL% && `
        python -m pip install --no-cache-dir --pre openvino_dev[caffe,kaldi,mxnet,onnx,pytorch,tensorflow2]>={{ product_version }} --trusted-host=* --find-links %OPENVINO_WHEELS_URL% `
    )
